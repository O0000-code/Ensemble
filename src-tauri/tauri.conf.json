{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ensemble",
  "version": "1.0.0",
  "identifier": "io.github.o0000-code.ensemble",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ensemble",
        "width": 1440,
        "height": 900,
        "minWidth": 1280,
        "minHeight": 720,
        "resizable": true,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 24,
          "y": 25
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Copyright (c) 2026 O0000-code",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: BoZhi Yuan (4WZ6SMP55G)",
      "hardenedRuntime": true,
      "minimumSystemVersion": "12.0"
    }
  }
}
